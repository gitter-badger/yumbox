doctype html
html(lang="en")
  head
    meta(charset='utf-8')
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name='description' content='Tipi helps you meet new people & share tips while you travel. And discover nearby travel experiences in all countries.')
    meta(name='keywords' content='travel,backpacker,travel,top 10 things,hotel,hostel,places')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(rel='shortcut icon' href='/assets/img/favicon.png')
    link(href="/bower/material-design-iconic-font/dist/css/material-design-iconic-font.min.css" rel="stylesheet")
    link(href="/assets/vendors/css/app.min.1.css" rel="stylesheet")
    link(href="/assets/vendors/css/app.min.2.css" rel="stylesheet")
    link(href="/assets/css/main.css" rel="stylesheet")
    block title
      title Tipi For travelers
  body.logged-in-content(layout='row')
    div(layout="column" layout-fill)
      section(layout='row' flex)
        div(layout='column' layout-fill role='main')
          block content
    each item in assets.app.js
      script(src="#{item}")
